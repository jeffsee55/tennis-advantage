<%= form_for([:admin,@location]) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.cktext_area :description %>
    </div>
    <%= f.fields_for :address do |address| %>
      <div class="field">
        <%= address.label :street %>
        <%= address.text_field :street %>
      </div>
      <div class="field">
        <%= address.label :township %>
        <%= address.text_field :township %>
      </div>
      <div class="field">
        <%= address.label :city %>
        <%= address.text_field :city %>
      </div>
      <div class="field">
        <%= address.label :state %>
        <%= address.text_field :state %>
      </div>
      <div class="field">
        <%= address.label :country %>
        <%= address.text_field :country %>
      </div>
    <% end %>
    <%= f.submit %>

    <%= button_to "Back", admin_path %>

  </div>
<% end %>
